<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ledgerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ropa_sans_regular"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:text="@string/ledger_01"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/tv_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_stamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ropa_sans_regular"
        android:paddingHorizontal="8dp"
        android:text="@string/thu_20_jan_12_37_am"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_money"
        app:layout_constraintStart_toStartOf="@+id/ledgerName"
        app:layout_constraintTop_toBottomOf="@+id/ledgerName" />

